<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MyMaterialTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>
    <style name="ToolbarColoredBackArrow" parent="MyMaterialTheme.Base">
        <item name="android:textColorSecondary"  >@android:color/holo_red_dark</item>
        <item name="android:textColor">@android:color/black</item>

    </style>
    <style name="TabLayoutStyle" parent="MyMaterialTheme.Base">
        <item name="android:textSize"  >@dimen/tablayout.textsize</item>
        <item name="android:textAllCaps">false</item>

    </style>
    <style name="TextViewFunctionStyle" >
        <item name="android:textSize">@dimen/textview.textsize.body</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@android:color/darker_gray</item>


    </style>
    <style name="TextviewSelectionStyle" >
        <item name="android:textSize">@dimen/textview.textsize.smallbody</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>

    </style>
    <style name="TextViewPhimLabelStyle" >
        <item name="android:textSize">@dimen/textview.textsize.body</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/coordinator.background</item>

    </style>
    <style name="TextViewPhimContentStyle" >
        <item name="android:textSize">@dimen/textview.textsize.body</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/darker_gray</item>

    </style>
    <style name="TextInputEditText" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@android:color/darker_gray</item>
        <item name="android:textSize">14sp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@android:color/white </item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorControlActivated">@android:color/white</item>
    </style>

    <style name="fab">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">4dp</item>
        <item name="borderWidth">0dp</item>
        <item name="android:color">@color/colorAccent</item>
        <item name="pressedTranslationZ">12dp</item>
        <item name="rippleColor">@android:color/white</item>
    </style>


</resources>
